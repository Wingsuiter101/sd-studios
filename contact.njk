    <div class="contact-container">
        <h1>Contact Me</h1>
        <p>Feel free to reach out for collaborations, inquiries, or just to say hi!</p>

        <!-- Contact Info Cards -->
        <div class="contact-cards">
            <div class="contact-card">
                <h3>Phone</h3>
                <p>+1 (343) 297-3566</p>
            </div>
            <div class="contact-card">
                <h3>Email</h3>
                <p><a href="mailto:contact@sauravdh.com">contact@sauravdh.com<br>sauravdh101@gmail.com</br></a></p>
            </div>
            <div class="contact-card">
                <h3>Address</h3>
                <p>Nepean<br>Ottawa, ON, Canada</p>
