                    <label for="name">Name</label>
                    <input type="text" id="name" name="from_name" autocomplete="name" required placeholder=" ">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="reply_to" autocomplete="email" required placeholder=" ">
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" autocomplete="off" required placeholder=" "></textarea>
                    <div class="char-count"><span id="char-count">0</span>/1000</div>
                </div>

                <!-- Add reCAPTCHA here -->
                <div class="g-recaptcha" data-sitekey="6LeAXMoqAAAAALMSwX5ODavXotCKsjRRljRHOPvX"></div>

                <div id="form-status"></div>
                <button type="submit" id="submit-btn">Send Message</button>
            </form>
        </section>
    </div>
</section>
